
<div class="comment-top">
    <h4>Bir Yorum Yapın</h4>
    <div class="comment-bottom">
        <form action="#" method="post">
            <input class="form-control" type="text" name="CommentUserName" id="CommentUserName" placeholder="Ad Soyad" required="">
            <input class="form-control" type="text" name="CommentTitle"  id="CommentTitle"placeholder="Başlık" required="">
            <textarea class="form-control" name="CommentContent" id="CommentContent" placeholder="Yorum..." required=""></textarea>
            <button type="submit" class="btn btn-primary submit" onclick="CommentAdd()">Yorum Yap</button>
        </form>
    </div>
</div>

<script>function CommentAdd() {

        var mail = {
            CommentUserName: $('#CommentUserName').val(),
            CommentTitle: $('#CommentTitle').val(),
            CommentContent: $('#CommentContent').val()
        }
        $.ajax({
            url: "/Comment/PartialAddComment/",
            method: "POST",
            dataType: "json",
            data: mail,
            success: function (response) {
                swal("Yorum başarılı ile yapıldı.")
            }
            ,
            error: function (response) {
                swal("Error", "Lütfen tekrar deneyin", "error")
            }
        });
    }</script>